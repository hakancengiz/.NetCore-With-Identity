@using WebUI.ViewModels
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Anasayfa";
}

<div class="card">
    <div class="card-header ui-sortable-handle" style="cursor: move;">
        <h3 class="card-title mt-2">
            <i class="fas fa-chart-pie mr-1"></i>
            Makale Listesi
        </h3>

        <div class="d-flex flex-row-reverse">
            <a href="/Home/AddArticle">
                <span class="btn btn-primary">Yeni Makale Ekle</span>
            </a>
        </div>

    </div><!-- /.card-header -->
    <div class="card-body">

        <div class="row">
            @foreach (var article in Model.ArticleList)
            {

                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning"><img src="@article.CoverPath" width="40" height="40" /></span>

                        <div class="info-box-content">
                            <span class="info-box-text">@article.CreatedDate.ToShortDateString()</span>
                            <span class="info-box-number">@article.Header - @article.User.FirstName @article.User.LastName</span>
                            @foreach (var tag in article.Tags)
                            {
                                <span class="info-box-text">#@tag.Name</span>
                            }
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
            }
        </div>

    </div><!-- /.card-body -->
</div>